<section class='category-container'>
<% if @categories.blank? %>
<p>There is no category to show , create one!</p>
<% else %>
<% @categories.each do |category| %>
<div class='card-container'>
<img src='<%= category.icon %>' alt='category icon' class='card-img' />
<div class='card-info'>
<h4><%= link_to category.name, {:action => 'show', :id => category.id } %></h4>
</div>
<% if can? :destroy, category %>
  <%= button_to "Delete", category_path(category), method: :delete, class: "btn", data: { confirm: 'Are you sure?' } %>
<% end %>
</div>
<% end %>
<% end %>
<%= link_to 'Add new category', new_category_path %>
</section>
